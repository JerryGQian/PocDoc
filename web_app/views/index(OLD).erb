<section>
  <form method="post" action="">
  <input type="hidden" value="<%= token %>" name="token">
  <fieldset>
  <div>
    <input type="text" placeholder="Say something clever" name="content">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
  </fieldset>
  </form>
</section>

<section>
  <% twits.each do |twit| %>
    <div class="box">
      <img class="box-avatar" src="/avatars/<%= twit[:avatar] %>" />
      <div class="box-body">
        <a href="/user?q=<%= twit[:user] %>"><%= twit[:user] %></a> â—‡ <%= twit[:date] %>
        <p> <%= twit[:content] %> </p>
      </div>
    </div>
  <% end %>
</section>
